<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.irakl_000.maps.settings.Settings">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="Profile"
            android:id="@+id/profileBtn"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:onClick="gotoProfile"
            android:src="@drawable/profile"
            android:layout_marginTop="118dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="46dp" />

        <ImageView

            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/sound"
            android:src="@drawable/sound"
            android:layout_above="@+id/faq"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="55dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/faq"
            android:layout_marginTop="61dp"
            android:src="@drawable/faq"
            android:layout_below="@+id/profileBtn"
            android:layout_alignStart="@+id/profileBtn" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageView2"
            android:src="@drawable/logout"
            android:layout_alignTop="@+id/faq"
            android:layout_alignStart="@+id/sound" />


</RelativeLayout>
